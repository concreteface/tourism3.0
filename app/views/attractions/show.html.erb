<div class='show row'>
  <div class='small-12 medium-6 large-6 columns'>
    <img src="<%= @attraction.photo_url %>" height='700' width='700' id="editableimage1" >
    <div class='row'>
      <strong>Name:</strong>
      <%= @attraction.name %>
    </div>
    <div class='row'>
      <strong>Description:</strong>
      <%= @attraction.description %>
    </div>
    <div class='row'>
      <% if @attraction.creator && @attraction.creator == current_user %>
        <%= link_to 'Change Details', edit_attraction_path(@attraction), class: 'button', id: 'detail_button' %>
        <a href="#" onclick="return launchEditor('editableimage1',
    '<%= @attraction.photo_url %>');" class='button hide-for-small-only' id='edit_button'>Edit Photo</a>
      <% end %>
    </div>
  </div>
  <div class='small-12 medium-6 large-6 columns show'>
    <div id="jsMap"></div>
    <input id="address" type="text" style="width:600px;"/>
    <input type="text" id="latitude" placeholder="Latitude"/>
    <input type="text" id="longitude" placeholder="Longitude"/>
  </div>
</div>
<body data-env="<%= ENV['ADOBE_DEV_ID'] %>">
  <script type="text/javascript">
    var featherEditor = new Aviary.Feather({
                apiKey: '<%= ENV['ADOBE_DEV_ID'] %>',
                tools:'color,sharpness,effects,lighting,color,focus,vignette,colorsplash',
                onSave: function(imageID, newURL) {
                   var photoParams = {
                  name: '<%= @attraction.name %>',
                  description: '<%= @attraction.description %>',
                  url_to_save: newURL,
                  id: '<%= @attraction.id %>'
                };
                  var request = $.ajax({
                    method: 'put',
                    url: '/attractions/update_photo',
                    data: photoParams
                  })
                    var img = document.getElementById(imageID);
                    img.src = newURL;
                    request.done(function(data){
                      if (data.message == 'success'){
                        featherEditor.close();
                      } else if (data.message == 'failure'){
                        console.log('Something went wrong')
                      }
                    })
                    return false;
                }
            });
            function launchEditor(id, src) {
                featherEditor.launch({
                    image: id,
                    url: src
                });
                return false;
            }
  </script>
  <div class='small-12 medium-8 large-6 columns'></div>
  <div></div>
  <div></div>
  <div></div>