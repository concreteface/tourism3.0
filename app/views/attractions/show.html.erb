<div class='show row'>
  <div class='small-12 medium-8 large-6 columns'>
    <img src="<%= @attraction.photo_url %>" height='700' width='700' id="editableimage1" >
    <div class='row'>
      <strong>Name:</strong>
      <%= @attraction.name %>
    </div>
    <div class='row'>
      <strong>Description:</strong>
      <%= @attraction.description %>
    </div>
    <div class='row'>
      <% if @attraction.creator == current_user %>
        <%= link_to 'Edit Picture Details', edit_attraction_path(@attraction) %>
      <% end %>
    </div>
  </div>
  <div >
    <iframe width="600" height="450" frameborder="0" style="border:0" src='<%= @iframe_source %>' id='map' allowfullscreen></iframe>
  </div>
</div>
<!-- Load widget code -->
<body data-env="<%= ENV['ADOBE_DEV_ID'] %>">
  <!-- Instantiate the widget -->
  <script type="text/javascript">
    var featherEditor = new Aviary.Feather({
            apiKey: '<%= ENV['ADOBE_DEV_ID'] %>',
            tools:'color,sharpness,effects,lighting,color,focus,vignette,colorsplash',
            onClose: function(isDirty){}, 
            onSave: function(imageID, newURL) {
               var photoParams = {
              name: '<%= @attraction.name %>',
              description: '<%= @attraction.description %>',
              url_to_save: newURL,
              id: '<%= @attraction.id %>'
            };
              var request = $.ajax({
                method: 'put',
                url: '/attractions/update_photo',
                data: photoParams
              })
                var img = document.getElementById(imageID);
                img.src = newURL;
    
                request.done(function(data){
                	if (data.message == 'success'){
                		console.log('cool')
                	} else if (data.message == 'failure'){

                		console.log('not cool')
                	}
                })
            }
            
        });
    
        function launchEditor(id, src) {
    
            featherEditor.launch({
                image: id,
                url: src
            });
              // debugger;
            return false;
        }
  </script>
  <a href="#" onclick="return launchEditor('editableimage1',
    '<%= @attraction.photo_url %>');">Edit!</a>
   <!-- <button id='edit_photo' class='button'>Edit</button> -->